{
  "name": "cloud-run-react-ssr",
  "version": "1.0.0",
  "description": "React SSR on Cloud Run",
  "main": "webpack.client.js",
  "scripts": {
    "build:client": "webpack --config webpack.client.js",
    "build:server": "docker build --tag ssr:1.0 .",
    "deploy:client": "gsutil cp ./dist/assets/* gs://{BUCKET_NAME}/assets && rm -rf ./dist",
    "deploy:server": "gcloud builds submit --config=cloudbuild.yaml",
    "update:client": "npm run build:client && npm run deploy:client",
    "update:server": "npm run build:server && npm run deploy:server",
    "update": "npm run update:client && npm run update:server"
  },
  "keywords": [
    "ssr",
    "serverless",
    "serverless side rendering",
    "react",
    "cloud run",
    "docker"
  ],
  "author": "Mikael Vesavuori",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@types/express": "^4.17.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "express": "^4.17.1",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "http-proxy-middleware": "^1.0.6",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0"
  }
}
